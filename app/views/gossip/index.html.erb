<div class="center jumbotron">

  <h1 class='ba'>The Gossip Project</h1>
  <br>
  <p class='ba'>
    Bienvenue sur le meilleur site de potins du monde.
  </p>

  <div class="cards">
      <% Gossip.all.each_with_index do |gossip, index| %>
          <p>
            <div class="card" style="width: 18rem;">
            <h5 class="card-title"><%=gossip.title%></h5>
            <h6 class="card-subtitle mb-2 text-muted"><%=gossip.created_at%></h6>
            <%=gossip.content%>
           <h8> <%= gossip.likes.count %> <%= link_to "👍🏻", likes_path %></h8><h8 class="card-subtitle mb-2 text-muted"><%= gossip.comments.count %> commentaires </h8>
            <a href='/gossip/<%=gossip.id%>' class="card-link">Voir le potin</a>
          </div>
          </p>
        <% end %>
      </div>
</div>
