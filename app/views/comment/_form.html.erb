<div class="form-row">
  <%= form_tag("/comment", method: :post, class: "col-md-6") do %>

  <div class="form-group col-md-12">
    <%= label_tag 'Votre username' %>
    <%= text_field_tag 'username', nil, class: "form-control" %>
  </div>

  <div class="form-group col-md-12">
    <%= label_tag 'Votre commentaire' %>
    <%= text_area_tag 'content', nil, class: "form-control", rows: "3" %>
  </div>

    <div class="form-group col-md-12">
      <%= submit_tag "Envoyer", class: "btn btn-primary" %>
    </div>
    <% end %>
</div>
